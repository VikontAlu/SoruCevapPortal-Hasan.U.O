@model List<Question>
@{
    ViewData["Title"] = ViewBag.CategoryName + " Kategorisindeki Sorular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>
                <i class="fas fa-folder text-info"></i> @ViewBag.CategoryName
            </h1>
            <p class="text-muted">Bu kategoride @Model.Count soru bulunuyor.</p>
        </div>
        <a href="/Question" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Tüm Sorulara Dön
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Bu kategoride henüz soru bulunmuyor.
        </div>
    }
    else
    {
        foreach (var question in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Question/Details/@question.Id" class="text-decoration-none">
                            @question.Title
                        </a>
                    </h5>
                    <p class="card-text text-muted">
                        @(question.Content.Length > 200 ? question.Content.Substring(0, 200) + "..." : question.Content)
                    </p>
                    <div class="d-flex justify-content-between">
                        <div>
                            <small class="text-muted">
                                <i class="fas fa-user"></i> @question.ApplicationUser?.UserName
                            </small>
                            <small class="text-muted ms-3">
                                <i class="fas fa-calendar"></i> @question.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                        <div>
                            <span class="badge bg-secondary me-2">
                                <i class="fas fa-eye"></i> @question.ViewCount
                            </span>
                            <span class="badge bg-success">
                                <i class="fas fa-comments"></i> @question.Answers.Count
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>