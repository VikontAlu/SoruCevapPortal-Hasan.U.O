@model List<SoruCevapPortalı.Models.Question>
@{
    ViewData["Title"] = ViewBag.CategoryName + " Soruları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-folder-open text-warning"></i> @ViewBag.CategoryName Kategorisi</h2>
        <a href="/Question/Index" class="btn btn-outline-secondary btn-sm">Tüm Sorulara Dön</a>
    </div>

    <div class="card p-3 bg-light mb-4 shadow-sm">
        <form method="get" action="/Question/ByCategory/@ViewBag.CategoryId" class="row g-2 align-items-center">

            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Bu kategoride ara..." value="@ViewBag.Search">
                </div>
            </div>

            <div class="col-md-4">
                <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                    <option value="date_desc" selected="@(ViewBag.SortOrder == "date_desc")">📅 En Yeni</option>
                    <option value="date_asc" selected="@(ViewBag.SortOrder == "date_asc")">📅 En Eski</option>
                    <option value="view_desc" selected="@(ViewBag.SortOrder == "view_desc")">👁 En Çok Görüntülenen</option>
                    <option value="vote_desc" selected="@(ViewBag.SortOrder == "vote_desc")">⭐ En Çok Oylanan</option>
                </select>
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Ara</button>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Bu kategoride henüz soru yok veya aramanızla eşleşen sonuç bulunamadı.
        </div>
    }
    else
    {
        @foreach (var question in Model)
        {
            <div class="card mb-3 shadow-sm border-start border-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Question/Details/@question.Id" class="text-decoration-none text-dark">
                            @question.Title
                        </a>
                    </h5>
                    <p class="card-text text-muted">
                        @(question.Content.Length > 150 ? question.Content.Substring(0, 150) + "..." : question.Content)
                    </p>
                    <div class="d-flex justify-content-between text-muted small">
                        <span><i class="fas fa-user"></i> @question.ApplicationUser?.UserName</span>
                        <span><i class="fas fa-clock"></i> @question.CreatedDate.ToString("dd.MM.yyyy")</span>
                        <span><i class="fas fa-eye"></i> @question.ViewCount</span>
                    </div>
                </div>
            </div>
        }
    }
</div>