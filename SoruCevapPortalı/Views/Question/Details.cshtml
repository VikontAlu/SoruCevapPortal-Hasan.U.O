@model SoruCevapPortalı.Models.Question
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Title</h4>
            <span class="badge bg-light text-dark">
                <i class="fas fa-eye"></i> @Model.ViewCount
            </span>
        </div>

        <div class="card-body">
            <div class="d-flex align-items-center gap-3 mb-3">
                <button class="btn btn-outline-success btn-sm" onclick="voteQuestion(@Model.Id, true)">
                    <i class="fas fa-chevron-up"></i>
                </button>

                <span id="question-score" class="fs-4 fw-bold">@Model.VoteCount</span>

                <button class="btn btn-outline-danger btn-sm" onclick="voteQuestion(@Model.Id, false)">
                    <i class="fas fa-chevron-down"></i>
                </button>
            </div>

            <div class="text-muted mb-2 small">
                <i class="fas fa-user"></i> <strong>@Model.ApplicationUser?.UserName</strong> |
                <i class="fas fa-clock"></i> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
            </div>

            <span class="badge bg-info mb-3">
                <i class="fas fa-folder"></i> @Model.Category?.Name
            </span>

            <div class="mt-3 bg-light p-3 rounded border">
                @Html.Raw(Model.Content.Replace("\n", "<br>"))
            </div>

            @if (Model.IsSolved)
            {
                <div class="alert alert-success mt-3 p-2">
                    <i class="fas fa-check-circle"></i> Bu soru çözüldü.
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="fas fa-comments"></i> Cevaplar (@Model.Answers.Count)
        </div>

        <div class="card-body">
            @if (Model.Answers.Any())
            {
                foreach (var answer in Model.Answers.OrderByDescending(a => a.IsBestAnswer).ThenByDescending(a => a.VoteCount))
                {
                    <div class="d-flex border-bottom pb-3 mb-3">
                        <div class="d-flex flex-column align-items-center me-3">
                            <button class="btn btn-outline-success btn-sm mb-1" onclick="voteAnswer(@answer.Id, true)">
                                <i class="fas fa-chevron-up"></i>
                            </button>

                            <span id="answer-score-@answer.Id" class="fw-bold fs-5">@answer.VoteCount</span>

                            <button class="btn btn-outline-danger btn-sm mt-1" onclick="voteAnswer(@answer.Id, false)">
                                <i class="fas fa-chevron-down"></i>
                            </button>

                            @if (answer.IsBestAnswer)
                            {
                                <div class="mt-2 text-success" title="En İyi Cevap">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            }
                        </div>

                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>@answer.ApplicationUser?.UserName</strong>
                                    <small class="text-muted ms-2">@answer.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            </div>

                            <p class="mt-2 mb-0">
                                @Html.Raw(answer.Content.Replace("\n", "<br>"))
                            </p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    Henüz cevap yok. İlk cevabı sen yaz!
                </div>
            }
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="card shadow-sm mt-4 mb-5">
            <div class="card-header bg-secondary text-white">
                <i class="fas fa-pen"></i> Cevap Yaz
            </div>
            <div class="card-body">
                <form method="post" action="/Answer/Add">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="questionId" value="@Model.Id" />
                    <textarea name="content" class="form-control" rows="5" placeholder="Cevabınızı buraya yazın..." required></textarea>
                    <button type="submit" class="btn btn-primary mt-2">
                        <i class="fas fa-paper-plane"></i> Gönder
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3 mb-5">
            Cevap yazabilmek için <a href="/Identity/Account/Login" class="alert-link">giriş yapmalısınız</a>.
        </div>
    }
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <script>
        // Token'ı al (Güvenlik için)
        const getToken = () => document.querySelector('input[name="__RequestVerificationToken"]').value;

        // 1. Soruya Oy Ver
        function voteQuestion(questionId, isUpVote) {
            const formData = new URLSearchParams();
            formData.append('questionId', questionId);
            formData.append('isUpVote', isUpVote);

            fetch('/Question/Vote', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getToken()
                },
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('question-score').innerText = data.totalScore;
                } else {
                    alert(data.message || "Hata oluştu");
                }
            })
            .catch(err => console.error(err));
        }

        // 2. Cevaba Oy Ver (YENİ EKLENDİ)
        function voteAnswer(answerId, isUpVote) {
            const formData = new URLSearchParams();
            formData.append('answerId', answerId);
            formData.append('isUpvote', isUpVote);

            fetch('/Answer/Vote', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': getToken()
                },
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    // İlgili cevabın puanını güncelle
                    const scoreEl = document.getElementById('answer-score-' + answerId);
                    if(scoreEl) scoreEl.innerText = data.totalScore;
                } else {
                    alert(data.message || "Hata oluştu");
                }
            })
            .catch(err => console.error(err));
        }
    </script>
}