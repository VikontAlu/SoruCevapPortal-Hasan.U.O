@model SoruCevapPortalı.Models.Question
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-4">

    <div class="border-bottom pb-3 mb-4">
        <div class="d-flex justify-content-between align-items-start">
            <h1 class="h2 fw-bold text-break text-dark">@Model.Title</h1>
            <a href="/Question/Ask" class="btn btn-primary btn-sm ms-3 text-nowrap">Soru Sor</a>
        </div>
        <div class="text-muted small mt-2 d-flex gap-3">
            <span><span class="text-dark">Soruldu:</span> @Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</span>
            <span><span class="text-dark">Görüntülenme:</span> @Model.ViewCount kez</span>
            <span><span class="text-dark">Kategori:</span> <span class="badge bg-light text-dark border">@Model.Category?.Name</span></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9">

            <div class="d-flex gap-3 mb-5">
                <div class="d-flex flex-column align-items-center" style="min-width: 50px;">
                    <button class="btn btn-link text-secondary p-0 text-decoration-none" onclick="voteQuestion(@Model.Id, true)" style="font-size: 1.5rem;">
                        <i class="fas fa-caret-up"></i>
                    </button>
                    <span id="question-score" class="fw-bold fs-4 text-dark my-1">@Model.VoteCount</span>
                    <button class="btn btn-link text-secondary p-0 text-decoration-none" onclick="voteQuestion(@Model.Id, false)" style="font-size: 1.5rem;">
                        <i class="fas fa-caret-down"></i>
                    </button>

                    @if (Model.IsSolved)
                    {
                        <div class="mt-3 text-success" title="Çözüldü">
                            <i class="fas fa-check fa-lg"></i>
                        </div>
                    }
                </div>

                <div class="flex-grow-1">
                    <div class="bg-light p-4 rounded-3 border">
                        <p class="mb-0" style="white-space: pre-wrap; font-size: 1.05rem; line-height: 1.6;">@Model.Content</p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            @if (User.Identity.IsAuthenticated && Model.ApplicationUserId != currentUserId)
                            {
                                <button class="btn btn-link text-muted p-0 text-decoration-none small" onclick="openReportModal('question', @Model.Id)">
                                    <i class="fas fa-flag"></i> Bildir
                                </button>
                            }
                        </div>

                        <div class="bg-primary bg-opacity-10 p-2 rounded border border-primary border-opacity-10 d-flex align-items-center" style="min-width: 200px;">
                            <div class="bg-primary text-white rounded me-2 d-flex align-items-center justify-content-center fw-bold" style="width: 32px; height: 32px;">
                                @Model.ApplicationUser?.UserName?.Substring(0, 1).ToUpper()
                            </div>
                            <div class="small lh-1">
                                <span class="d-block text-muted" style="font-size: 11px;">soran</span>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold text-primary">@Model.ApplicationUser?.UserName</span>
                                    <span id="rep-question-author" class="badge bg-warning text-dark ms-2 border border-warning" title="Kullanıcı Puanı">
                                        <i class="fas fa-star fa-xs"></i> @(Model.ApplicationUser?.Reputation ?? 0)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-center mb-3">
                <h4 class="fw-bold me-2">@Model.Answers.Count Cevap</h4>
                <div class="flex-grow-1 border-top"></div>
            </div>

            @if (Model.Answers.Any())
            {
                foreach (var answer in Model.Answers.OrderByDescending(a => a.IsBestAnswer).ThenByDescending(a => a.VoteCount))
                {
                    <div class="d-flex gap-3 mb-4 p-3 rounded @(answer.IsBestAnswer ? "border border-success border-2 bg-success bg-opacity-10" : "border-bottom")">
                        <div class="d-flex flex-column align-items-center" style="min-width: 50px;">
                            <button class="btn btn-link text-secondary p-0 text-decoration-none" onclick="voteAnswer(@answer.Id, true)" style="font-size: 1.5rem;">
                                <i class="fas fa-caret-up"></i>
                            </button>
                            <span id="answer-score-@answer.Id" class="fw-bold fs-5 text-dark my-1">@answer.VoteCount</span>
                            <button class="btn btn-link text-secondary p-0 text-decoration-none" onclick="voteAnswer(@answer.Id, false)" style="font-size: 1.5rem;">
                                <i class="fas fa-caret-down"></i>
                            </button>

                            @if (answer.IsBestAnswer)
                            {
                                <div class="mt-2 text-success" title="Kabul Edilen Cevap">
                                    <i class="fas fa-check fa-2x"></i>
                                </div>
                            }
                            @if (User.Identity.IsAuthenticated && (Model.ApplicationUserId == currentUserId || User.IsInRole("Admin")) && !answer.IsBestAnswer)
                            {
                                <button onclick="acceptAnswer(@answer.Id)" class="btn btn-outline-success btn-sm border-0 mt-2" title="Bu cevabı kabul et">
                                    <i class="fas fa-check"></i>
                                </button>
                            }
                        </div>

                        <div class="flex-grow-1">
                            <div class="mb-3" style="font-size: 1rem;">
                                @Html.Raw(answer.Content.Replace("\n", "<br>"))
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex gap-3 align-items-center">
                                    <small class="text-muted">Cevaplandı: @answer.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>

                                    @if (User.Identity.IsAuthenticated && answer.ApplicationUserId != currentUserId)
                                    {
                                        <button class="btn btn-link text-muted p-0 text-decoration-none small" onclick="openReportModal('answer', @answer.Id)">
                                            <i class="fas fa-flag"></i> Bildir
                                        </button>
                                    }
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="text-muted small me-2">cevaplayan:</span>
                                    <span class="fw-bold text-dark">@answer.ApplicationUser?.UserName</span>

                                    <span id="rep-answer-author-@answer.Id" class="badge bg-light text-muted border ms-1" style="font-size: 0.75rem;" title="Kullanıcı Puanı">
                                        <i class="fas fa-star text-warning" style="font-size: 0.7rem;"></i> @(answer.ApplicationUser?.Reputation ?? 0)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5 bg-light rounded mb-4">
                    <i class="fas fa-wind fa-2x text-muted mb-2"></i>
                    <p class="text-muted">Henüz cevap yok. İlk cevabı sen yaz!</p>
                </div>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <div class="card shadow-sm border-0 mt-5 bg-light">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Cevabınız</h5>
                        <form method="post" action="/Answer/Add">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="questionId" value="@Model.Id" />
                            <textarea name="content" class="form-control mb-3" rows="6" placeholder="Detaylı bir cevap yazın..." required></textarea>
                            <button type="submit" class="btn btn-primary px-4">Cevabı Gönder</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-5">
                    Cevap yazmak için <a href="/Identity/Account/Login" class="alert-link">giriş yapmalısınız</a>.
                </div>
            }

        </div>

        <div class="col-lg-3">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6 class="fw-bold text-muted text-uppercase small border-bottom pb-2">İstatistikler</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Soruldu</span>
                        <span class="fw-bold">@((DateTime.Now - Model.CreatedDate).Days) gün önce</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Görüntülenme</span>
                        <span class="fw-bold">@Model.ViewCount</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Durum</span>
                        <span class="badge @(Model.IsSolved ? "bg-success" : "bg-warning text-dark")">
                            @(Model.IsSolved ? "Çözüldü" : "Açık")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold"><i class="fas fa-exclamation-triangle text-warning me-2"></i>İçeriği Bildir</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reportForm">
                    <input type="hidden" id="reportType">
                    <input type="hidden" id="reportTargetId">
                    <div class="mb-3">
                        <label class="form-label">Bu içeriği neden bildiriyorsunuz?</label>
                        <select class="form-select mb-2" id="reportReasonSelect" onchange="checkCustomReason()">
                            <option value="Spam veya reklam">Spam veya reklam</option>
                            <option value="Hakaret veya uygunsuz dil">Hakaret veya uygunsuz dil</option>
                            <option value="Yanlış bilgi">Yanlış bilgi</option>
                            <option value="Konu dışı">Konu dışı</option>
                            <option value="other">Diğer...</option>
                        </select>
                        <textarea class="form-control d-none" id="reportReasonCustom" rows="3" placeholder="Lütfen sebebi açıklayın..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" onclick="submitReport()">Gönder</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        const getToken = () => document.querySelector('input[name="__RequestVerificationToken"]').value;

        // Oylama İşlemleri (Puan Güncellemeli)
        function voteQuestion(questionId, isUpVote) {
            const formData = new URLSearchParams();
            formData.append('questionId', questionId);
            formData.append('isUpVote', isUpVote);

            fetch('/Question/Vote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': getToken() },
                body: formData
            }).then(res => res.json()).then(data => {
                if (data.success) {
                    document.getElementById('question-score').innerText = data.totalScore;
                    // Yazarın puanını güncelle
                    const repEl = document.getElementById('rep-question-author');
                    if (repEl && data.authorRep !== undefined) repEl.innerHTML = '<i class="fas fa-star fa-xs"></i> ' + data.authorRep;
                } else { alert(data.message); }
            });
        }

        function voteAnswer(answerId, isUpVote) {
            const formData = new URLSearchParams();
            formData.append('answerId', answerId);
            formData.append('isUpvote', isUpVote);

            fetch('/Answer/Vote', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': getToken() },
                body: formData
            }).then(res => res.json()).then(data => {
                if (data.success) {
                    document.getElementById('answer-score-' + answerId).innerText = data.totalScore;
                    // Yazarın puanını güncelle
                    const repEl = document.getElementById('rep-answer-author-' + answerId);
                    if (repEl && data.authorRep !== undefined) repEl.innerHTML = '<i class="fas fa-star text-warning" style="font-size: 0.7rem;"></i> ' + data.authorRep;
                } else { alert(data.message); }
            });
        }

        function acceptAnswer(answerId) {
            if(!confirm("Bu cevabı 'En İyi Cevap' olarak işaretlemek istiyor musunuz?")) return;
            const formData = new URLSearchParams();
            formData.append('id', answerId);

            fetch('/Answer/AcceptAnswer', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': getToken() },
                body: formData
            }).then(res => res.json()).then(data => {
                if (data.success) { location.reload(); }
                else { alert(data.message); }
            });
        }

        // Raporlama İşlemleri
        function openReportModal(type, id) {
            document.getElementById('reportType').value = type;
            document.getElementById('reportTargetId').value = id;
            document.getElementById('reportReasonSelect').value = "Spam veya reklam";
            checkCustomReason();
            new bootstrap.Modal(document.getElementById('reportModal')).show();
        }

        function checkCustomReason() {
            const select = document.getElementById('reportReasonSelect');
            const customArea = document.getElementById('reportReasonCustom');
            if(select.value === 'other') customArea.classList.remove('d-none');
            else customArea.classList.add('d-none');
        }

        function submitReport() {
            const type = document.getElementById('reportType').value;
            const id = document.getElementById('reportTargetId').value;
            const select = document.getElementById('reportReasonSelect');
            let reason = select.value;
            if(reason === 'other') reason = document.getElementById('reportReasonCustom').value;

            if(!reason.trim()) { alert("Lütfen bir sebep belirtin."); return; }

            const formData = new URLSearchParams();
            if(type === 'question') formData.append('questionId', id);
            if(type === 'answer') formData.append('answerId', id);
            formData.append('reason', reason);

            fetch('/Report/Create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': getToken() },
                body: formData
            }).then(res => res.json()).then(data => {
                alert(data.message);
                if(data.success) {
                    bootstrap.Modal.getInstance(document.getElementById('reportModal')).hide();
                }
            });
        }
    </script>
}