@model List<SoruCevapPortalı.Models.Question>
@{
    ViewData["Title"] = "Sorular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark"><i class="fas fa-comments text-primary me-2"></i>Tüm Sorular</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Question/Ask" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus"></i> Soru Sor
            </a>
        }
    </div>

    <div class="card p-3 border-0 shadow-sm bg-white mb-4 rounded-3">
        <form method="get" action="/Question/Index" class="row g-2 align-items-center">

            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control border-start-0 ps-0" placeholder="Merak ettiğin bir şey var mı?" value="@ViewBag.Search">
                </div>
            </div>

            <div class="col-md-4">
                <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                    <option value="">Sıralama Ölçütü...</option>
                    <option value="date_desc" selected="@(ViewBag.SortOrder == "date_desc")">📅 En Yeni</option>
                    <option value="date_asc" selected="@(ViewBag.SortOrder == "date_asc")">📅 En Eski</option>
                    <option value="view_desc" selected="@(ViewBag.SortOrder == "view_desc")">👁 En Çok Görüntülenen</option>
                    <option value="view_asc" selected="@(ViewBag.SortOrder == "view_asc")">👁 En Az Görüntülenen</option>
                    <option value="vote_desc" selected="@(ViewBag.SortOrder == "vote_desc")">⭐ En Çok Beğenilen</option>
                    <option value="vote_asc" selected="@(ViewBag.SortOrder == "vote_asc")">⭐ En Az Beğenilen</option>
                    <option value="title_asc" selected="@(ViewBag.SortOrder == "title_asc")">A'dan Z'ye</option>
                    <option value="title_desc" selected="@(ViewBag.SortOrder == "title_desc")">Z'den A'ya</option>
                </select>
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Filtrele</button>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center py-5 shadow-sm">
            <i class="fas fa-ghost fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Burada henüz hiç ses yok...</h4>
            <p>Aradığın kriterlere uygun soru bulunamadı veya henüz kimse bir şey sormadı.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Question/Ask" class="btn btn-primary mt-2">Sessizliği Boz</a>
            }
        </div>
    }
    else
    {
        @foreach (var question in Model)
        {
            <div class="card mb-3 border-0 shadow-sm question-card @(question.IsSolved ? "border-start border-success border-5" : "")">
                <div class="card-body p-0">
                    <div class="d-flex">

                        <div class="d-flex flex-column align-items-center justify-content-center p-3 bg-light text-muted border-end" style="min-width: 100px;">
                            <div class="mb-2 text-center">
                                <span class="d-block fw-bold fs-5 text-dark">@question.VoteCount</span>
                                <small style="font-size: 10px;">OY</small>
                            </div>
                            <div class="mb-2 text-center @(question.IsSolved ? "text-success" : "")">
                                @if (question.IsSolved)
                                {
                                    <i class="fas fa-check mb-1"></i>
                                }
                                <span class="d-block fw-bold fs-5">@question.Answers.Count</span>
                                <small style="font-size: 10px;">CEVAP</small>
                            </div>
                            <div class="text-center">
                                <span class="d-block fw-bold fs-6">@question.ViewCount</span>
                                <small style="font-size: 10px;">GÖZ</small>
                            </div>
                        </div>

                        <div class="p-3 flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="mb-1">
                                    <a href="/Question/Details/@question.Id" class="text-decoration-none text-primary fw-bold stretched-link">
                                        @question.Title
                                    </a>
                                </h5>
                                @if (question.IsSolved)
                                {
                                    <span class="badge bg-success rounded-pill ms-2"><i class="fas fa-check"></i> Çözüldü</span>
                                }
                            </div>

                            <p class="text-muted mb-2 small text-truncate" style="max-width: 600px;">
                                @question.Content
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div>
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill me-2">
                                        <i class="fas fa-folder-open me-1"></i>@question.Category?.Name
                                    </span>
                                </div>

                                <div class="d-flex align-items-center small text-muted">
                                    <div class="me-2 text-end lh-1">
                                        <span class="d-block">@question.ApplicationUser?.UserName</span>
                                        <span class="text-secondary" style="font-size: 11px;">@question.CreatedDate.ToString("dd MMM yyyy HH:mm")</span>
                                    </div>
                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white fw-bold" style="width: 35px; height: 35px;">
                                        @question.ApplicationUser?.UserName?.Substring(0, 1).ToUpper()
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .question-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .question-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
    /* Linklerin üstüne başka link gelmemesi için */
    .question-card .badge, .question-card .btn {
        position: relative;
        z-index: 2;
    }
</style>