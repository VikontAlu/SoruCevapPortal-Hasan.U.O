<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin">
                <i class="fas fa-cog"></i> Admin Panel
            </a>
            <div>
                <a href="/Admin/Categories" class="btn btn-outline-light btn-sm me-2">
                    <i class="fas fa-folder"></i> Kategoriler
                </a>
                <a href="/Admin/Questions" class="btn btn-outline-light btn-sm me-2">
                    <i class="fas fa-question-circle"></i> Sorular
                </a>
                <a href="/Admin/UserManagement" class="btn btn-outline-light btn-sm me-2">
                    <i class="fas fa-users"></i> Kullanıcılar
                </a>
                <a href="/" class="btn btn-outline-info btn-sm">
                    <i class="fas fa-home"></i> Siteye Dön
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- jQuery (AJAX için GEREKLİ) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
