<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soru Cevap Portalı</title>

    <!-- CSS Dosyaları -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- JQUERY (AJAX için ZORUNLU) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- CSRF Token (AJAX için ZORUNLU) -->
    @Html.AntiForgeryToken()

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-question-circle"></i> Soru Cevap Portalı
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Question" asp-action="Index">
                                <i class="fas fa-question-circle"></i> Sorular
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Question" asp-action="Ask">
                                <i class="fas fa-plus"></i> Soru Sor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin" target="_blank">
                                <i class="fas fa-cog"></i> Admin Panel
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- TempData Mesajları (Başarı/Hata bildirimleri) -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Soru Cevap Portalı -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a> -
            <a asp-area="" asp-controller="Home" asp-action="About">Hakkında</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site genel JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sayfaya özel JS'ler -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Global AJAX ayarı -->
    <script>
        // CSRF token'ı tüm AJAX isteklerine ekle
        $.ajaxSetup({
            headers: {
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
            }
        });

        // Sayfa yüklendiğinde jQuery kontrolü
        $(document).ready(function() {
            console.log("📱 Soru Cevap Portalı yüklendi");
            console.log("🔧 jQuery versiyonu:", $.fn.jquery);

            // Navbar aktif link ayarı
            var currentPath = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                var linkPath = $(this).attr('href');
                if (currentPath === linkPath ||
                    (linkPath !== '/' && currentPath.startsWith(linkPath))) {
                    $(this).addClass('active');
                    $(this).append(' <span class="visually-hidden">(current)</span>');
                }
            });
        });
    </script>
</body>
</html>