<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soru Cevap Portalı</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            border-top: 3px solid #0d6efd;
        }

        .search-nav input {
            background-color: #f1f2f3;
            border: 1px solid #d6d9dc;
            transition: all 0.3s;
        }

            .search-nav input:focus {
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
                border-color: #0d6efd;
            }

        /* Dropdown Menü İyileştirmeleri */
        .dropdown-menu {
            border-radius: 0.5rem;
            margin-top: 10px;
        }

        .dropdown-item {
            padding: 8px 16px;
            font-size: 0.95rem;
        }

            .dropdown-item:active {
                background-color: #0d6efd;
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    @Html.AntiForgeryToken()

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-dark fs-4" asp-controller="Home" asp-action="Index">
                    <i class="fab fa-stack-overflow text-primary"></i> SoruCevap
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 fw-medium">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Question" asp-action="Index">Sorular</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">Yönetim</a></li>
                        }
                    </ul>

                    <form class="d-flex mx-lg-4 w-50 search-nav" action="/Question/Index" method="get">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                            <input class="form-control border-start-0 ps-0" type="search" name="search" placeholder="Soru ara..." aria-label="Search">
                        </div>
                    </form>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark p-0" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2 shadow-sm" style="width: 35px; height: 35px; font-weight: bold;">
                                        @User.Identity.Name?.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-bold d-none d-lg-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-3 animate slideIn" aria-labelledby="userDropdown">
                                    <li>
                                        <div class="px-3 py-2 border-bottom mb-2">
                                            <span class="d-block small text-muted">Hoşgeldin,</span>
                                            <span class="fw-bold text-dark">@User.Identity.Name</span>
                                        </div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="fas fa-user-circle me-2 text-primary"></i> Profilim
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Settings">
                                            <i class="fas fa-cog me-2 text-secondary"></i> Ayarlar
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold me-2" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm px-3 rounded-pill shadow-sm" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 border-start border-success border-5" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 border-start border-danger border-5" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top py-4 mt-auto">
        <div class="container text-center text-muted">
            <div class="mb-2">
                <a href="#" class="text-decoration-none text-muted me-3">Hakkımızda</a>
                <a href="#" class="text-decoration-none text-muted me-3">Gizlilik</a>
                <a href="#" class="text-decoration-none text-muted">İletişim</a>
            </div>
            <small>&copy; 2025 Soru Cevap Portalı. Tüm hakları saklıdır.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $.ajaxSetup({
            headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
        });
    </script>
</body>
</html>