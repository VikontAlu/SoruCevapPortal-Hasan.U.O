@model List<Question>
@{
    ViewData["Title"] = "Soru Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-question-circle text-primary"></i> Soru Yönetimi</h2>
    <div>
        <span class="badge bg-danger me-2">@Model.Count Soru</span>
        <a href="/Admin" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-dashboard"></i> Dashboard'a Dön
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Henüz hiç soru bulunmuyor!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Soru Başlığı</th>
                    <th>Kategori</th>
                    <th>Görüntülenme</th>
                    <th>Cevaplar</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td><strong>#@question.Id</strong></td>
                        <td>
                            <div class="fw-bold">@question.Title</div>
                            <small class="text-muted">@question.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </td>
                        <td>
                            <span class="badge bg-info">@question.Category?.Name</span>
                        </td>
                        <td>
                            <i class="fas fa-eye text-secondary"></i> @question.ViewCount
                        </td>
                        <td>
                            <i class="fas fa-comments text-success"></i> @question.Answers.Count
                        </td>
                        <td>
                            @if (question.IsSolved)
                            {
                                <span class="badge bg-success"><i class="fas fa-check"></i> Çözüldü</span>
                            }
                            else
                            {
                                <span class="badge bg-warning"><i class="fas fa-clock"></i> Beklemede</span>
                            }
                        </td>
                        <td>
                            <a href="/Admin/QuestionDetail/@question.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Görüntüle
                            </a>
                            <a href="/Admin/DeleteQuestion/@question.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu soruyu silmek istediğine emin misin?')">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}