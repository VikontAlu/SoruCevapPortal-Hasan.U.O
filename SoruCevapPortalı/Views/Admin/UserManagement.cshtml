@using System.Security.Claims
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users text-primary"></i> Kullanıcı Yönetimi</h2>

    <div class="d-flex align-items-center">
        <form method="get" class="d-flex me-3">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Ad veya E-posta ara..." style="width: 250px;">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        </form>

        <span class="badge bg-info me-2">@Model.Count Kullanıcı</span>
        <a href="/Admin" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Dashboard
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        @if (!string.IsNullOrEmpty(ViewBag.Search))
        {
            <span>"@ViewBag.Search" aramasına uygun kullanıcı bulunamadı.</span>
            <a href="/Admin/UserManagement" class="alert-link">Tüm listeyi göster</a>
        }
        else
        {
            <span>Henüz kayıtlı kullanıcı bulunmuyor.</span>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Kullanıcı ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Ad Soyad</th>
                    <th>Kayıt Tarihi</th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    // Giriş yapmış kullanıcının ID'sini alıyoruz
                    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                    var isCurrentUser = user.Id == currentUserId;

                    <tr class="@(isCurrentUser ? "table-warning border-warning" : "")">
                        <td><small class="text-muted">@user.Id.Substring(0, 8)...</small></td>
                        <td>
                            <strong>@user.UserName</strong>
                            @if (isCurrentUser)
                            {
                                <span class="badge bg-success ms-1">Siz</span>
                            }
                        </td>
                        <td>@user.Email</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                            {
                                <text>@user.FirstName @user.LastName</text>
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </td>
                        <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="/Admin/UserDetail/@user.Id" class="btn btn-info btn-sm text-white" title="Detay">
                                <i class="fas fa-eye"></i>
                            </a>

                            @if (!isCurrentUser)
                            {
                                <a href="/Admin/DeleteUser/@user.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('@user.UserName adlı kullanıcıyı silmek istediğinize emin misiniz?');" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled title="Kendi hesabınızı silemezsiniz">
                                    <i class="fas fa-ban"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}