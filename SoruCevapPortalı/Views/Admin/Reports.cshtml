@model List<SoruCevapPortalı.Models.Report>
@{
    ViewData["Title"] = "Şikayet Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 fw-bold mb-0">⚠️ Şikayet Bildirimleri</h2>
        <span class="badge bg-danger">@Model.Count Kayıt</span>
    </div>

    <form method="get" class="d-flex" style="max-width: 300px;">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Sebep veya Kullanıcı ara...">
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
    </form>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tarih</th>
                        <th>Bildiren</th>
                        <th>Tür</th>
                        <th>Sebep</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted small">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px; font-size: 12px;">
                                            @item.Reporter?.UserName?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span>@item.Reporter?.UserName</span>
                                    </div>
                                </td>
                                <td>
                                    @if (item.QuestionId != null)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">Soru</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Cevap</span>
                                    }
                                </td>
                                <td class="text-danger fw-bold">@item.Reason</td>
                                <td>
                                    @if (item.QuestionId != null)
                                    {
                                        <a href="/Question/Details/@item.QuestionId" target="_blank" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i> İncele
                                        </a>
                                    }
                                    else if (item.Answer != null)
                                    {
                                        <a href="/Question/Details/@item.Answer.QuestionId" target="_blank" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i> İncele
                                        </a>
                                    }

                                    <form asp-action="DeleteReport" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu raporu silmek istediğinize emin misiniz?')">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-check-circle fa-2x mb-2 text-success"></i>
                                @if (!string.IsNullOrEmpty(ViewBag.Search))
                                {
                                    <p class="mb-0">"@ViewBag.Search" aramasına uygun şikayet bulunamadı.</p>
                                    <a href="/Admin/Reports" class="btn btn-link btn-sm">Tümünü Göster</a>
                                }
                                else
                                {
                                    <p class="mb-0">Harika! Hiç şikayet yok.</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>