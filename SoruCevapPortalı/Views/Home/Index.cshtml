@{
    ViewData["Title"] = "Soru Cevap Portalı";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Controller'dan gelen veriler
    var recentQuestions = ViewBag.RecentQuestions as List<Question>;
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="text-center py-5 bg-light rounded-3 mb-5">
        <h1 class="display-4 text-primary">
            <i class="fas fa-question-circle"></i> Soru Cevap Portalı
        </h1>
        <p class="lead mt-3">
            Bilgi paylaştıkça çoğalır! Sorularını sor, deneyimlerini paylaş, topluluğumuzun bir parçası ol.
        </p>

        <div class="mt-4">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Question/Ask" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-plus-circle"></i> Yeni Soru Sor
                </a>
            }
            else
            {
                <a href="/Identity/Account/Register" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-user-plus"></i> Hemen Kayıt Ol
                </a>
            }
            <a href="/Question" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-list"></i> Tüm Soruları Gör
            </a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-center border-primary h-100">
                <div class="card-body">
                    <i class="fas fa-question-circle fa-2x text-primary mb-3"></i>
                    <h2 class="card-title">@ViewBag.TotalQuestions</h2>
                    <p class="card-text">Toplam Soru</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success h-100">
                <div class="card-body">
                    <i class="fas fa-comments fa-2x text-success mb-3"></i>
                    <h2 class="card-title">@ViewBag.TotalAnswers</h2>
                    <p class="card-text">Toplam Cevap</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-warning h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-2x text-warning mb-3"></i>
                    <h2 class="card-title">@ViewBag.TotalUsers</h2>
                    <p class="card-text">Kullanıcı</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info h-100">
                <div class="card-body">
                    <i class="fas fa-folder fa-2x text-info mb-3"></i>
                    <h2 class="card-title">@ViewBag.TotalCategories</h2>
                    <p class="card-text">Kategori</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Questions & Categories -->
    <div class="row">
        <!-- Latest Questions -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-fire"></i> Son Sorular
                        <a href="/Question" class="btn btn-sm btn-light float-end">
                            <i class="fas fa-arrow-right"></i> Tümü
                        </a>
                    </h4>
                </div>
                <div class="card-body">
                    @if (recentQuestions == null || !recentQuestions.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Henüz soru bulunmuyor. İlk soruyu sen sor!
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="text-center mt-3">
                                <a href="/Question/Ask" class="btn btn-success">
                                    <i class="fas fa-plus"></i> İlk Soruyu Sor
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center mt-3">
                                <a href="/Identity/Account/Register" class="btn btn-success">
                                    <i class="fas fa-user-plus"></i> Kayıt Ol ve İlk Soruyu Sor
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var question in recentQuestions)
                            {
                                <a href="/Question/Details/@question.Id"
                                   class="list-group-item list-group-item-action border-0 rounded mb-2 shadow-sm">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">@question.Title</h6>
                                            <p class="mb-1 text-muted small">
                                                @if (question.Content.Length > 120)
                                                {
                                                    @question.Content.Substring(0, 120)
                                        
                                                    @:...
                                                }
                                                else
                                                {
                                                    @question.Content
                                                }
                                            </p>
                                            <div class="mt-2">
                                                <small class="text-muted me-3">
                                                    <i class="fas fa-user"></i> @question.ApplicationUser?.UserName
                                                </small>
                                                <small class="text-muted me-3">
                                                    <i class="fas fa-folder"></i> @question.Category?.Name
                                                </small>
                                                <small class="text-muted me-3">
                                                    <i class="fas fa-comment"></i> @question.Answers.Count cevap
                                                </small>
                                                <small class="text-muted">
                                                    <i class="fas fa-eye"></i> @question.ViewCount
                                                </small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted d-block">
                                                @question.CreatedDate.ToString("dd.MM.yyyy")
                                            </small>
                                            @if (question.IsSolved)
                                            {
                                                <span class="badge bg-success mt-1">Çözüldü</span>
                                            }
                                            else if (question.Answers.Count > 0)
                                            {
                                                <span class="badge bg-warning mt-1">@question.Answers.Count cevap</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary mt-1">Yeni</span>
                                            }
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>

                        <div class="text-center mt-4">
                            <a href="/Question" class="btn btn-outline-primary">
                                <i class="fas fa-list"></i> Tüm Soruları Görüntüle (@ViewBag.TotalQuestions soru)
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-folder"></i> Kategoriler
                        <a href="/Question" class="btn btn-sm btn-light float-end">
                            <i class="fas fa-list"></i> Tümü
                        </a>
                    </h4>
                </div>
                <div class="card-body">
                    @if (categories == null || !categories.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> Henüz kategori bulunmuyor.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var category in categories)
                            {
                                <a href="/Question/ByCategory/@category.Id"
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-folder me-2"></i> @category.Name
                                    </div>
                                    <span class="badge bg-primary rounded-pill">
                                        @(category.Questions?.Count ?? 0)
                                    </span>
                                </a>
                            }
                        </div>
                    }

                    <!-- Hızlı Eylemler -->
                    <div class="mt-4">
                        <div class="d-grid gap-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="/Question/Ask" class="btn btn-success">
                                    <i class="fas fa-plus-circle"></i> Yeni Soru Sor
                                </a>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login" class="btn btn-primary">
                                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                                </a>
                                <a href="/Identity/Account/Register" class="btn btn-success">
                                    <i class="fas fa-user-plus"></i> Ücretsiz Kayıt Ol
                                </a>
                            }
                            <a href="/Question" class="btn btn-outline-primary">
                                <i class="fas fa-question-circle"></i> Soru Ara
                            </a>
                        </div>
                    </div>

                    <!-- Sistem Bilgisi -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6><i class="fas fa-info-circle"></i> Sistem Bilgisi</h6>
                        <small class="text-muted">
                            <div><i class="fas fa-check-circle text-success"></i> Soru sorma aktif</div>
                            <div><i class="fas fa-check-circle text-success"></i> Cevap verme aktif</div>
                            <div><i class="fas fa-check-circle text-success"></i> Oylama sistemi hazır</div>
                            <div><i class="fas fa-check-circle text-success"></i> @ViewBag.TotalUsers aktif kullanıcı</div>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stil Ekleme -->
<style>
    .card {
        transition: transform 0.3s;
        border: 1px solid rgba(0,0,0,0.1);
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .list-group-item {
        border-left: 3px solid transparent;
        transition: all 0.3s;
    }

        .list-group-item:hover {
            border-left: 3px solid #0d6efd;
            background-color: #f8f9fa;
        }

    .stat-card {
        height: 100%;
    }

    .bg-light-gradient {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
</style>